<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/null" fx:controller="hu.petrik.dolgozat.ListDataController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox spacing="20.0">
         <children>
            <Button fx:id="insertButton" mnemonicParsing="false" onAction="#insertClick" text="Create" />
            <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateClick" text="Update" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteClick" text="Delete" />
         </children>
      </HBox>
      <TableView fx:id="peopleTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="nameCol" minWidth="50.0" prefWidth="250.0" text="Name" />
          <TableColumn fx:id="jobtitleCol" minWidth="50.0" prefWidth="250.0" text="Job title" />
            <TableColumn fx:id="companyCol" minWidth="50.0" prefWidth="75.0" text="Company" />
            <TableColumn fx:id="statusCol" minWidth="50.0" prefWidth="75.0" text="Status" />
        </columns>
      </TableView>
   </children>
</VBox>
